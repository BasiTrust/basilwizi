//- This is the header for all the pages. Make sure its called in all .pug files for them to work.
doctype html
html(lang='en')
  head
    meta(charset='utf-8')
    meta(name='viewport', content='width=device-width, initial-scale=1, shrink-to-fit=no')
    meta(name='description', content='')
    meta(name='author', content='')
    link(rel='icon', href='../../../../favicon.ico')
    title= title
    link(rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" integrity="sha384-JcKb8q3iqJ61gNV9KGb8thSsNjpSL0n8PARn9HuZOnIxN0hoP+VmmDGMN5t9UJ0Z" crossorigin="anonymous")
    link(rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css")
    link(rel='stylesheet', href='/stylesheets/style.css', type='text/css', media='all')
    script(src="https://use.fontawesome.com/fde7862b8f.js")
    script.
      // Event listener
      addEventListener("load", function () {
        setTimeout(hideURLbar, 0);
      }, false);
      
      function hideURLbar() {
        window.scrollTo(0, 1);
      }
  body
    #home
      .top_w3pvt_main.container
        header.nav_w3pvt.text-center
          nav.wthree-w3ls
            #logo
              h1
                a.navbar-brand.px-0.mx-0(href="/sites") Basilwizi Trust
            label.toggle(for="drop") Menu
            input#drop(type="checkbox")
            ul.menu.mr-auto
              li.active
                a(href="/sites/") Home
              li
                a(href="/sites/extensions/about") Mission 
              if user
                li.mr-lg-3.mr-2.p-0
                  label(for="drop-2" class="toggle")= user.user_fname
                    span.fa.fa-angle-down( aria-hidden="true")
                  a(href="#")= user.user_fname
                    span.fa.fa-angle-down( aria-hidden="true")
                  input#drop-2(type="checkbox")
                  ul.inner-dropdown
                    li
                      a(href="/sites/logout") Logout
              li
                a(href="/sites/extensions/management") Organisation
              li
                a(href="/sites/extensions/community") Projects
              li
                a(href="/sites/itm/gallery") Gallery
              li
                a(href="/sites/itm/contactus") Contact Us
              if !user
                a.text-capitalize.mr-2.work.btn(href='/sites/login', class=(title == 'Get started to our page' ? 'active' : '')) Login
              li.social-icons.ml-lg-3
                a.p-0.social-icon(href='https://www.facebook.com/www.basilwizi.org/' target="_blank")
                  span.fa.fa-facebook-f
                  .tooltip Facebook
              li.social-icons.ml-lg-3
                a.p-0.social-icon(href='#')
                  span.fa.fa-twitter
                  .tooltip Twitter
        include ./layouts/notification
    block content
    include footer

