    script(src="/admin/vendor/daterangepicker/moment.min.js")
    script(src="/admin/vendor/daterangepicker/daterangepicker.js")
    script(src="/admin/vendor/countdowntime/countdowntime.js")
    script(src="/admin/js/main.js")

