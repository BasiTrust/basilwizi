extends ../layout/header
block content
  //-- Main Banner followed by sections
  //- Home banner
  #homepage-slider.st-slider
    input.cs_anchor.radio(type="radio" name="slider" id="play1" checked="")
    input.cs_anchor.radio(type="radio" name="slider" id="slide1" checked="")
    input.cs_anchor.radio(type="radio" name="slider" id="slide2" checked="")
    input.cs_anchor.radio(type="radio" name="slider" id="slide3" checked="")
    .images
      .images-inner
        .image-slide
          .banner-w3pvt-1
            .overlay-w3ls
        .image-slide
          .banner-w3pvt-2
            .overlay-w3ls
        .image-slide
          .banner-w3pvt-3
            .overlay-w3ls
    .labels
      .fake-radio
        label.radio-btn(for="slide1")
        label.radio-btn(for="slide2")
        label.radio-btn(for="slide3")
    .banner-hny-info
      h3 Welcome to Basilwizi
        br 
        | People of the Great River
      .top-buttons.mx-auto.text-center.mt-md-5.mt-3
        a.btn.more.mr-2(href="#features") Read More
        a.btn(href="/sites/contactus") Contact Us
      .d-flex.hny-stats-inf
        .col-md-4.stats_w3pvt_counter_grid.mt-3
          .d-md-flex.justify-content-center
            //h5.counter !{data.commentary_count}
            p.para-w3pvt Comments
        .col-md-4.stats_w3pvt_counter_grid.mt-3
          .d-md-flex.justify-content-center
            //h5.counter !{data.song_count}
            p.para-w3pvt Tonga songs
        .col-md-4.stats_w3pvt_counter_grid.mt-3
          .d-md-flex.justify-content-center
            //h5.counter  !{data.email_count}
            p.para-w3pvt Subscribers
  
    //-!= messages('message', locals)
      if errors
      each error, i in errors
        div(class="alert alert-danger") #{error.msg}



